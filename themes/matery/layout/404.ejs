<style type="text/css">
    /* don't remove. */
    .about-cover {
        height: 80.2vh;
    }
</style>
<div class="bg-cover pd-header about-cover">
    <div class="container">
        <div class="row">
            <div class="col s8 offset-s1 m7 offset-m2 l7 offset-l2">
                <div class="brand">
                    <div class="title center-align">
                        404 您找的页面不存在 ┑(￣Д ￣)┍！
                    </div>
                    <!-- div class="title center-align">试试右上角的<span style="color:blue;font-weight:bold">搜索</span> 功能 </div -->
                    <div class="title center-align">
                        <a href="/" target="_blank">
                        <i class="fa fa-home"></i>
                        返回首页
                        </a>
                    </div>
                    <div class="description center-align">
                        <%= page.description %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (theme.banner.enable) { %>
    <script>
        // 每天切换 banner 图.  Switch banner image every day.
        var bannerUrl = "<%- theme.jsDelivr.url %><%- url_for('/medias/banner/') %>" + new Date().getDay() + '.jpg';
        $('.bg-cover').css('background-image', 'url(' + bannerUrl + ')');
    </script>
<% } else { %>
    <script>
        //$('.bg-cover').css('background-image', 'url(<%- theme.jsDelivr.url %><%- url_for('/medias/banner/0.jpg') %>)');
        $('.bg-cover').css('background-image', 'url(https://api.kdcc.cn/img/)');
    </script>
<% } %>
